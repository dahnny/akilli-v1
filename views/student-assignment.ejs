<%- include('partials/header') %>
<%- include('partials/navbar-dash') %>
<link rel="stylesheet" href="/assets/css/lesson.css" />
<link rel="stylesheet" href="/assets/css/student.css" />
<!-- The sidebar -->
<div class="student-sidebar">
    <a class="active" href="/student-dashboard/?class=<%= classes._id%>&tutor=<%= tutor._id %>" title="Streaming Box(Beta)"
      ><i class="fas fa-video fa-3x"></i
    ></a>
    <a href="/student/<%= classes._id %>/curriculum/1?user=<%= tutor._id %>" title="Curriculum"
      ><i class="fas fa-book-reader fa-3x"></i
    ></a>
    <a href="/student-assignment?class=<%= classes._id%>&tutor=<%= tutor._id %>" title="Assignment Questions"
      ><i class="fas fa-user-edit fa-3x"></i
    ></a>
    <!-- <a href="/resources">Class Files</a> -->
  </div>

  <div class="content">

<div class="mainbar">
  
    <% if (typeof classes != "undefined" ) { %>
        <% classes.assignments.forEach(assignment => { %>
          <form action="" method="post">
          <input type="hidden" name="questionId" value="<%= assignment._id %>">
          <input type="hidden" name="tutorId" value="<%= tutor._id %>">
          <input type="hidden" name="classId" value="<%= classes._id %>">
         <div class="added-assignment">
             <p class="assignment-paragraph"><%= assignment.question %> </p>
             
             <div class="form-group">
                <label for="">Answer</label>
                <textarea
                required
                  type="text"
                  name="answer"
                  class="form-control"
                  
                ></textarea>
              </div>
             
           </div>
           <button class="btn btn-primary" type="submit">Submit</button>
        </form>
        <% }) %>
       <% } %>
       
    </div>

      <div class="sidebar">
          <div class="gadget">
        <h2 class="star"><span>Class</span> Files</h2>
        <div class="clr">
          <ul class="sb_menu">
            <% classes.files.forEach(file => { %>
            <li class="file-list">
              <a target="blank" href="<%= file.file %>"
                ><%= file.publicId %>
              </a>
            </li>
            <% }) %>
          </ul>
        </div>
      </div>
      </div>
  </div>

