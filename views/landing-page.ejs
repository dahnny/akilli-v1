    <!-- Description -->
    <div class="cards-1">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="above-heading"><%= user.classes.length %> CLASSES </div>
                    <h2 class="h2-heading">Classes Created by <%= user.username %> </h2>
                </div> <!-- end of col -->
            </div> <!-- end of row -->
            <div class="row">
                <div class="col-lg-12">
                    <% user.classes.forEach(foundClass => { %>
                        <div class="card shadow " style="padding: 20px;">
                            <div class="card-image">
                               <h3 class="card-title"><%=foundClass.title%> </h3>
                                <% if (foundClass.price != undefined && foundClass.isPaid == true) { %>
                                 <h2>$<%= foundClass.price %> </h2>

                                 <% } else { %>
                                    <h2>FREE</h2>
                                <% } %>
                               
                            </div>
                            <div class="card-body">
                                <p><%= foundClass.description %> </p>
                            </div>
                            <button type="submit" class="btn btn-primary" style="width: 100%;">Enroll</button>
                        </div>
                    <% }) %>
                    
                </div> <!-- end of col -->
            </div> <!-- end of row -->
        </div> <!-- end of container -->
    </div> <!-- end of cards-1 -->
    <!-- end of description -->
